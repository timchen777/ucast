<h4>File Upload</h4>
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New File", new_article_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Upload Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @articles.each do |article| %>
         
         <tr>
            <td><%= article.name %></td>
            <td><%= link_to "Upload File", article.attachment_url %></td>
            <td><%= button_to "Delete",  article, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{article.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
