<p id="notice"><%= notice %></p>

<h4>Posts</h4>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post, class: "btn btn-success" %></td>
        <% if logged_in? %>
           <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %></td>
           <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= will_paginate %>
</div>  
<% if logged_in? %>
<%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
<% end %>